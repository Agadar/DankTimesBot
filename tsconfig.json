{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": false,
    "target": "es2020",
    "lib": ["es2020"],
    "noImplicitAny": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "pretty": true,
    "removeComments": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "module": "commonjs",
    "baseUrl": "types",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*"
  ]
}