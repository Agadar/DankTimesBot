{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": false,
    "target": "es2017",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "pretty": true,
    "removeComments": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "module": "commonjs",
    "baseUrl": "types",
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}